pipeline {
	agent any
	options {
  		buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '1', numToKeepStr: '3')
  		timestamps()
  		retry(3)
		quietPeriod 5
  	}
	stages {
		stage('Checkout') {
			steps {
        			echo "Checkout completed"
			}
		}

		stage('Test') {
			steps {
				echo "Running static tests on code"
			}
		}

		stage('Build') {
			steps {
				sh 'echo "Building the code"'
			}
		}

		stage('Deploy') {
			steps {
				echo "Deploying into environment"
			}
		}

	}
	post {
  		always {
    			sh 'echo ("Job ${env.JOB_NAME} is running on ${env.JENKINS_URL} and having build no: ${env.BUILD_ID}") | mail -s "Successful" fatimatabassum2010@gmail.com'
  		}
	}	
}
